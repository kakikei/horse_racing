<p style="color: green"><%= notice %></p>

<%= render @horse %>

<div>
  name: <%= @horse.name %>
  <br>
  url: <%= @horse.url %>
</div>

<div>
  <% @horse.horse_details.each do |horse_detail| %>
    <%= link_to "horse_detail link (id: #{horse_detail.id})", horse_detail_path(horse_detail) %>
    <br>
  <% end %>
  <%= link_to "Edit this horse", edit_horse_path(@horse) %> |
  <%= link_to "Back to horses", horses_path %>

  <%= button_to "Destroy this horse", @horse, method: :delete %>
</div>
